<main id="edit-profile">
  <div class="edit-profile__container">
    <header class="edit-profile__header">
      <div class="edit-profile__avatar-container">
          <%= image_tag(current_user.avatar) %>
      </div>
      <h4 class="edit-profile__username"><%= @user.username %></h4>
    </header>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "edit-profile__form" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="form__row">
        <%= f.label :avatar, class: "form__label" %>
        <%= f.file_field :avatar, class: "form__input" %>
      </div>
      <div class="form__row">
        <%= f.label :name, class: "form__label" %>
        <%= f.text_field :name, class: "form__input" %>
      </div>
      <div class="form__row">
        <%= f.label :username, class: "form__label" %>
        <%= f.text_field :username, class: "form__input", readonly: true %>
      </div>
      <div class="form__row">
        <%= f.label :password, class: "form__label" %>
        <%= f.password_field :password, class: "form__input" %>
      </div>
      <div class="form__row">
        <%= f.label :password_confirmation, class: "form__label" %>
        <%= f.password_field :password_confirmation, class: "form__input" %>
      </div>
      <div class="form__row">
        <%= f.label :current_password, class: "form__label" %>
        <%= f.password_field :current_password, class: "form__input" %>
      </div>
      <div class="form__row">
        <%= f.label :description, class: "form__label" %>
        <%= f.text_area :description, class: "form__input" %>
      </div>
      <div class="form__row">
        <%= f.label :email, class: "form__label" %>
        <%= f.text_field :email, class: "form__input" %>
      </div>
      <%= f.submit %>
      <% end %>
  </div>
</main>